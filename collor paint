import tkinter
class Paint():
    def __init__(self):
            self.screen=tkinter.Tk()
            self.screen.geometry("600x600")
            self.screen.title("paint")
            self.button1=tkinter.Button(self.screen,text="pen")
            self.button2=tkinter.Button(self.screen,text="brush")
            self.button3=tkinter.Button(self.screen,text="collor")
            self.button4=tkinter.Button(self.screen,text="eraser")
            self.scale=tkinter.Scale(self.screen,from_=1,to=10,orient=tkinter.HORIZONTAL)
            self.canvas=tkinter.Canvas(self.screen,width=600,height=500)
            self.button1.grid(row=1,column=1)
            self.canvas.grid(row=2,column=1,columnspan=5)
            self.button2.grid(row=1,column=2)
            self.button3.grid(row=1,column=3)
            self.button4.grid(row=1,column=4)
            self.scale.grid(row=1,column=5)
            self.screen.mainloop()
Paint()


